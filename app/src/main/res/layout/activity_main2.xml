<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.lotterygame.Main2Activity">

    <TextView
        android:id="@+id/lblWelcome"
        android:layout_width="245dp"
        android:layout_height="57dp"
        android:text="Welcome to the Lotto Game"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/lblMoney"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:text="How much money would you like to start with?"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="93dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="177dp"
        tools:text="Enter an amount less than 100" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:text="Next Page"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="349dp" />
</android.support.constraint.ConstraintLayout>
